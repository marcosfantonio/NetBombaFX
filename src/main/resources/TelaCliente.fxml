<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="alture.netbombafx.controller.ClienteController">
    <children>
        <VBox prefHeight="60.0" prefWidth="400.0">
            <children>
                <Label prefWidth="400.0" style="-fx-alignment: CENTER;" text="Clientes" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
        <VBox prefHeight="210.0" prefWidth="400.0">
            <children>
                <TableView fx:id="tableView" prefHeight="230.0" prefWidth="360.0">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="180.0" text="nome" />
                        <TableColumn fx:id="cpfColumn" prefWidth="180.0" text="cpf" />
                    </columns>
                </TableView>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </VBox>
        <HBox prefHeight="60.0" prefWidth="400.0" spacing="100.0">
            <children>
                <VBox prefHeight="60.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="buttonAdicionarCliente" onAction="#adicionarClienteTela" mnemonicParsing="false" style="-fx-background-color: #B18FCF;"
                                text="+ Adicionar" />
                    </children>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </VBox>
                <VBox prefHeight="60.0" prefWidth="100.0">
                    <children>
                        <Button fx:id="buttonBuscar" mnemonicParsing="false" style="-fx-background-color: #B18FCF;"
                                text="Buscar" />
                    </children>
                    <padding>
                        <Insets right="20.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets top="15.0" />
            </padding>
        </HBox>
    </children>
</VBox>